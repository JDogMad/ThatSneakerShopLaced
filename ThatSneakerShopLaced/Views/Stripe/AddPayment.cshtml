@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@if (ViewData["ErrorMessage"] != null) {
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-stepper text-black" style="border-radius: 16px;">
                    <div class="card-body p-5">

                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <div>
                                <h5 class="mb-0">@localizer["invoice"] <span class="text-primary font-weight-bold">#@ViewData["Uuid"]</span></h5>
                            </div>
                            <div class="text-end">
                                <p class="mb-0"> @localizer["Expected Arrival"] <span>@ViewData["Shipping"]</span></p>
                            </div>
                        </div>

                        <ul id="progressbar-2" class="d-flex justify-content-between mx-0 mt-0 mb-5 px-0 pt-0 pb-2">
                            <li class="step0 active text-center" id="step1"></li>
                            <li class="step0 text-muted text-end" id="step2"></li>
                            <li class="step0 text-muted text-end" id="step3"></li>
                            <li class="step0 text-muted text-end" id="step4"></li>
                        </ul>

                        <div class="d-flex justify-content-between">
                            <div class="d-lg-flex align-items-center">
                                <span><img alt="order" src="~/img/order-processed.png" Width="50" /></span>
                                <i class="fas fa-clipboard-list fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                <div>
                                    <p class="fw-bold mb-1">@localizer["Order"]</p>
                                    <p class="fw-bold mb-0">@localizer["Processed"]</p>
                                </div>
                            </div>
                            <div class="d-lg-flex align-items-center">
                                <span><img alt="order" src="~/img/order.png" Width="50" /></span>
                                <div>
                                    <p class="fw-bold mb-1">@localizer["Order"]</p>
                                    <p class="fw-bold mb-0">@localizer["Shipped"]</p>
                                </div>
                            </div>
                            <div class="d-lg-flex align-items-center">
                                <span><img alt="order" src="~/img/delivery-truck.png" Width="50" /></span>
                                <div>
                                    <p class="fw-bold mb-1">@localizer["Order"]</p>
                                    <p class="fw-bold mb-0">@localizer["En Route"]</p>
                                </div>
                            </div>
                            <div class="d-lg-flex align-items-center">
                                <span><img alt="order" src="~/img/home.png" Width="50" /></span>
                                <div>
                                    <p class="fw-bold mb-1">@localizer["Order"]</p>
                                    <p class="fw-bold mb-0">@localizer["Arrived"]</p>
                                </div>
                            </div>
                        </div>

                        <form asp-controller="Stripe" asp-action="AddStripePayment">
                            <div class="card-footer">
                                <button type="submit" class="subscribe btn btn-primary btn-block shadow-sm">  @localizer["Return to the homepage"]</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
