@using Microsoft.AspNetCore.Identity
@using ThatSneakerShopLaced.Areas.Identity.Data
@inject SignInManager<Laced_User> SignInManager
@inject UserManager<Laced_User> UserManager
@model Paginas<ThatSneakerShopLaced.Models.ViewModels.UserViewModel>

@{}

@if(User.IsInRole("Admin")){
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h4 class="card-title">Shoes</h4>
                                <button type="button" class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Shoes" asp-action="Index">See more</a>
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                          <th>Shoe</th>
                                          <th>Price</th>
                                          <th>Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var shoe in (List<ShoeViewModel>)ViewData["shoes"]){
                                            <tr>
                                                <td>@shoe.Name</td>
                                                <td>€@shoe.Price</td>
                                                <td>
                                                    @if (shoe.Stock <= 5) {
                                                        <p class="text-danger">@shoe.Stock</p>
                                                    } else {
                                                        <p class="text-success">@shoe.Stock</p>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>    
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h4 class="card-title">Categories</h4>
                                <button type="button" class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">See more</a>
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Available</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in (List<CategoryViewModel>)ViewData["categories"]) {
                                            <tr>
                                                <td>@category.Name</td>
                                                <td>
                                                    @if (category.Available == false){
                                                        <p class="text-success">Yes</p>
                                                    } else {
                                                        <p class="text-danger">No</p>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h4 class="card-title">Users</h4>
                                <button type="button" class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">See more</a>
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Username</th>
                                            <th>First name</th>
                                            <th>Last name</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="ms-3">
                                                            <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.UserName)</p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.FirstName)</p></td>
                                                <td><p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.LastName)</p></td>
                                                <td><p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Email)</p></td>
                                                <td>
                                                    @foreach (string role in item.Roles) {
                                                        @if(role == "User"){
                                                            <p class="text-secondary">@role</p>
                                                        }else if(role == "Manager"){
                                                            <p class="text-warning">@role</p>
                                                        } else {
                                                            <p class="text-danger">@role</p>
                                                        }
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
} else if(User.IsInRole("Manager")){
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h4 class="card-title">Shoes</h4>
                                <button type="button" class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="StockManagment" asp-action="Index">See more</a>
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Shoe</th>
                                            <th>Price</th>
                                            <th>Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var shoe in (List<ShoeViewModel>)ViewData["shoes"]) {
                                            <tr>
                                                <td>@shoe.Name</td>
                                                <td>€@shoe.Price</td>
                                                <td>
                                                    @if (shoe.Stock <= 5) {
                                                        <p class="text-danger">@shoe.Stock</p>
                                                    } else {
                                                        <p class="text-success">@shoe.Stock</p>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h4 class="card-title">Categories</h4>
                                <button type="button" class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">See more</a>
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Available</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in (List<CategoryViewModel>)ViewData["categories"]) {
                                            <tr>
                                                <td>@category.Name</td>
                                                <td>
                                                    @if (category.Available == false) {
                                                        <p class="text-success">Yes</p>
                                                    } else {
                                                        <p class="text-danger">No</p>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="grid-margin">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h4 class="card-title">Orders</h4>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        @if (((List<OrderViewModel>)ViewData["orders"]).Count == 0){
                                            <h5 class="mb-0">No orders yet.</h5>
                                            <small>It's only a matter of time!</small>
                                        } else {
                                            <thead>
                                                <tr>
                                                    <th>OrderId</th>
                                                    <th>Order date</th>
                                                    <th>Total</th>
                                                    <th>Customer</th>
                                                    <th>Country</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var order in (List<OrderViewModel>)ViewData["orders"]) {
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                <div class="ms-3">
                                                                    <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => order.OrderId)</p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td><p class="fw-bold mb-1">@Html.DisplayFor(modelItem => order.OrderDate)</p></td>
                                                        <td><p class="text-muted mb-0">@Html.DisplayFor(modelItem => order.OrderTotal)</p></td>
                                                        <td><p class="text-muted mb-0">@Html.DisplayFor(modelItem => order.Customer.FirstName)</p></td>
                                                        <td><p class="text-muted mb-0">@Html.DisplayFor(modelItem => order.Customer.Country)</p></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

