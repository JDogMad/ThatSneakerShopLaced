@model IEnumerable<ThatSneakerShopLaced.Models.Shoe>
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="/css/style.css">
</head>

<section class="bg-light pt-5 pb-5 shadow-sm">
    <div class="container">
        <div class="row">
                @foreach(var item in Model){
                    @if(item != null){
                        @if(item.Hidden == false){
                        <div class="col-lg-4 mb-3 d-flex align-items-stretch">
                            <div class="card">
                                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="card-img-top" alt="@Html.DisplayFor(modelItem => item.ShoeName)" height="210px">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.ShoeName)</h5>
                                    <p class="card-text mb-4">@Html.DisplayFor(modelItem => item.ShoeDescription)</p>
                                    <p class="card-text mb-4">@Html.DisplayFor(modelItem => item.ShoePrice)</p>
                                    <a class="btn btn-primary mt-auto align-self-end" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ShoeId">Add to cart</a>
                                </div>
                            </div>
                        </div>
                        }
                    }
                }
        </div>
    </div>
</section>
