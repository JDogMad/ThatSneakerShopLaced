                                    <a href="#" class="text-muted" data-abc="true">Women</a>
                                </div>

                                <h3 class="mb-0 font-weight-semibold">@Html.DisplayFor(modelItem => item.ShoePrice)</h3>

                                <button type="button" class="btn bg-cart">
                                    <a class="nav-link text-dark" asp-controller="Wishlists" asp-action="Add" asp-route-id="@item.ShoeId"><img id="img_cart" alt="logo" src="~/img/wishlist.png" Width="25" /></a>
                                </button>

                                <button type="button" class="btn bg-cart">
                                    <a class="btn btn-primary mt-auto" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ShoeId">Add to cart</a>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <h4 id="men-section">Men</h4>
        <div class="row">
