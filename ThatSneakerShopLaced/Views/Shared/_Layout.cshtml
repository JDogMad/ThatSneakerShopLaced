@using Microsoft.AspNetCore.Mvc.ViewFeatures


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThatSneakerShopLaced</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThatSneakerShopLaced.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a asp-controller="Users" asp-action="Index">Users</a>
            <a asp-controller="Shoes" asp-action="Index">Shoes</a>
            <a asp-controller="Categories" asp-action="Index">Categories</a>
            <a asp-controller="Wishlists" asp-action="Index">Wishlists</a>
            <a asp-controller="Payments" asp-action="Index">Payments</a>
            <a asp-controller="Orders" asp-action="Index">Orders</a>
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if(User.IsInRole("Admin")){
                    <span onclick="openNav()"> 
                        <img id="img_logo" alt="logo" src="img/laced_logo.png" Width="100" />
                    </span>
                } else {
                    <a asp-controller="Home" asp-action="Index">
                        <img id="img_logo" alt="logo" src="img/laced_logo.png" Width="100" />
                    </a>
                }
                                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if(User.IsInRole("Admin")){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Manager")) {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>
                        }
                    </ul>
                    <a class="nav-link text-dark" asp-controller="Cart">
                        <img id="img_cart" alt="logo" src="img/shopping-cart.png" Width="25" />
                    </a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ThatSneakerShopLaced - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
