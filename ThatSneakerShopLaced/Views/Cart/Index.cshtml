@model CartViewModel
@using Microsoft.AspNetCore.Identity
@using ThatSneakerShopLaced.Areas.Identity.Data
@inject SignInManager<Laced_User> SignInManager
@inject UserManager<Laced_User> UserManager
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
	ViewData["Title"] = "Cart overview";
}

@if(Model.CartItems.Count > 0){
<section class="h-100 h-custom" style="background-color: white;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">@localizer["Shopping Cart"]</h1>
                                    </div>
                                        @{
                                            decimal total = 0;
                                            int stock = 0;
                                            int quantity = 0;
                                        }
                                    <hr class="my-4">
                                    @foreach(var item in Model.CartItems){
                                        total += item.Price * item.Quantity;
                                        <div class="d-flex justify-content-between align-items-center" style="width: 100%;">
                                            <div class="row mb-4 d-flex justify-content-start align-items-center">
                                                <div class="col-md-2 col-lg-2 col-xl-2">
                                                    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Image)"
                                                        alt="@Html.DisplayFor(modelItem => item.ShoeName)" width="25">
                                                </div>
                                                <div class="col-md-5">
                                                    <h6 class="text-muted" name="name">@Html.DisplayFor(modelItem => item.ShoeName)</h6>
                                                </div>
                                            </div>
                                            <div class="col-mb-5 d-flex justify-content-center align-items-center">
                                                    @if(User.IsInRole("User")){
                                                        @if (item.Quantity <= item.Stock){
                                                            stock = item.Stock;
                                                            quantity = item.Quantity;
                                                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ShoeId">
                                                                <img id="img_increase" alt="icon increase" src="~/img/add_item.png" Width="15" />
                                                            </a>
                                                            <h6 class="mb-0">@item.Quantity</h6>
                                                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ShoeId">
                                                                <img id="img_decrease" alt="icon decrease" src="~/img/minus.png" Width="15" />
                                                            </a>
                                                        } else {
                                                            <div class="alert alert-danger" role="alert">
                                                                 @localizer["Not in stock"]
                                                            </div>
                                                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ShoeId">
                                                                <img id="img_decrease" alt="icon decrease" src="~/img/minus.png" Width="15" />
                                                            </a>

                                                        }   
                                                    } else {
                                                        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ShoeId">
                                                            <img id="img_increase" alt="icon increase" src="~/img/add_item.png" Width="15" />
                                                        </a>
                                                        <h6 class="mb-0">@item.Quantity</h6>
                                                        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ShoeId">
                                                            <img id="img_decrease" alt="icon decrease" src="~/img/minus.png" Width="15" />
                                                        </a>
                                                    }
                                                                                                 
                                            </div>
                                            <div class="col-mb-5">
                                                <h6 class="mb-0" style="margin-right: 10px;">@item.Price.ToString("C2")</h6>
                                            </div>
                                            <div class="col-mb-5">
                                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ShoeId">
                                                    <img id="img_remove" alt="icon remove" src="~/img/remove.png" Width="20" />
                                                </a>
                                            </div>
                                        </div>
                                    }
                                    
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-0">
                                            <a class="text-body" asp-controller="Home" asp-action="Index">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i>
                                                     @localizer["Back to the shop"]
                                            </a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 bg-grey">
                                <div class="p-5">
                                        <h3 class="fw-bold mb-5 mt-2 pt-1">@localizer["Summary"]</h3>
                                    <hr class="my-4">

                                    @if(Model.CartItems.Count > 0 ){

                                    } else {
                                        <div>
                                                <small class="mb-0"> @localizer["Nothing to see here."] </small>
                                        </div>
                                    }

                                    @foreach(var item in Model.CartItems){
                                            <div class="d-flex justify-content-between mb-4">
                                                <h5 class="text-uppercase">@Html.DisplayFor(modelItem => item.ShoeName)</h5>
                                                <h5>€@Html.DisplayFor(modelItem => item.Total)</h5>
                                            </div>
                                    }
                                    
                                    <hr class="my-4">
                                        <div class="d-flex justify-content-between mb-5">
                                        <h5 class="text-uppercase">@localizer["Total"]</h5>
                                            <h5>€@total</h5>
                                        </div>

                                        @{
                                            var totalShoes = total.ToString();
                                            TempData["Total"] = totalShoes;
                                        }

                                    
                                    @if (SignInManager.IsSignedIn(User)) {
                                        <button id="checkout-btn" type="button" class="btn btn-dark btn-block btn-lg" data-mdb-ripple-color="dark">
                                            <a style="color:white; text-decoration:none;" asp-controller="Cart" asp-action="ShippingInfo" >Continue to checkout</a>
                                        </button>
                                        <div class="alert alert-danger" role="alert" id="stock_error" style="display: none">
                                                @localizer["Not in stock. Please remove items from cart to continue."]
                                        </div>
                                    } else {
                                        <h6 class="mb-0">
                                            <a class="text-body" asp-area="Identity" asp-page="/Account/Register">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i>
                                                    @localizer["Please sign in to continue."]
                                            </a>
                                        </h6>
                                    }
                                    
                                        <script>
                                            function hideCheckoutButton() {
                                                if (@quantity <= @stock) {
                                                    document.getElementById("checkout-btn").style.display = "block";
                                                    document.getElementById("stock_error").style.display = "none";
                                                } else {
                                                    document.getElementById("checkout-btn").style.display = "none";
                                                    document.getElementById("stock_error").style.display = "block";
                                                }
                                            }
                                            hideCheckoutButton();
                                        </script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
} else {
    <div>
        <h3 class="mb-0">You're cart is empty.</h3>
        <small>
            <a style="color:gray; text-decoration:gray" asp-controller="Home" asp-action="Index">
                <i class="fas fa-long-arrow-alt-left me-2"></i>
                Continue shopping
            </a>
        </small>
    </div>
}

