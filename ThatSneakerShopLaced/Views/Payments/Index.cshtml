@model IEnumerable<ThatSneakerShopLaced.Models.Payment>
@using Microsoft.AspNetCore.Identity
@using ThatSneakerShopLaced.Areas.Identity.Data
@inject SignInManager<Laced_User> SignInManager
@inject UserManager<Laced_User> UserManager

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole("Admin") || User.IsInRole("Manager")) {
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeOfPayment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    @if (item.Hidden == false) {
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentMethod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeOfPayment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.OrderId)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
}

