@model List<Wishlist>
@using Microsoft.AspNetCore.Identity
@using ThatSneakerShopLaced.Areas.Identity.Data
@inject SignInManager<Laced_User> SignInManager
@inject UserManager<Laced_User> UserManager

@if(SignInManager.IsSignedIn(User)){
	<div class="cart-wrap">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h4>My wishlist</h4>
					<div class="table-wishlist">
						<table cellpadding="0" cellspacing="0" border="0" width="100%">
							<thead>
								<tr>
									<th width="45%">Shoe</th>
									<th width="15%">Price</th>
									<th width="15%">Stock Status</th>
									<th width="15%"></th>
									<th width="10%"></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var wishlistItem in Model)
								{
									<tr>
										<td width="45%">
											<div class="display-flex align-center">
												<div class="name-product">
													@wishlistItem.Shoe.ShoeName
												</div>
											</div>
										</td>
										<td width="15%" class="price">€ @wishlistItem.Shoe.ShoePrice</td>
										@if (wishlistItem.Shoe.Stock > 0)
										{
											<td width="15%"><span class="in-stock-box">In Stock</span></td>
										}
										else
										{
											<td width="15%"><span class="in-stock-box">SOLD OUT</span></td>
										}
										<td width="15%">
											<a class="btn btn-primary mt-auto align-self-end" asp-controller="Cart" asp-action="Add" asp-route-id="@wishlistItem.Shoe.ShoeId">Add to cart</a>
										</td>
										<td width="10%" class="text-center">
											<a class="nav-link text-dark" asp-controller="Wishlists" asp-action="Remove" asp-route-id="@wishlistItem.ShoeId">
												<img id="img_remove" alt="icon remove" src="~/img/remove.png" Width="10" />
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
}
    